# ========================================
# VINSARAA BACKEND ENVIRONMENT VARIABLES
# ========================================

# --- CORE DJANGO SETTINGS ---
# Set to True for development, False for production
DEBUG=True

# Generate a secure key with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# --- DATABASE CONFIGURATION ---
# For SQLite (development):
# DATABASE_URL=sqlite:///db.sqlite3

# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost:5432/vinsaraa_db
# Example: DATABASE_URL=postgresql://vinsaraa_user:secure_password@localhost:5432/vinsaraa_db

# --- RAZORPAY PAYMENT GATEWAY ---
# Get these from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# --- GOOGLE OAUTH ---
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# --- SITE URLS ---
# Backend server URL
SITE_URL=http://localhost:8000

# Frontend application URL
FRONTEND_URL=http://localhost:3000

# --- OPTIONAL: SECURITY SETTINGS (Production) ---
# Set to True in production
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False